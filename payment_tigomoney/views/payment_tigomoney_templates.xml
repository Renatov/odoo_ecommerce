<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <template id="tigomoney_acquirer_button">
            <form t-if="acquirer" t-att-action="tx_url" method="post" target="_self">
                <!-- after payment parameters -->
                <input t-if='custom' type='hidden' name="custom"
                    t-att-value='custom'/>
                <!-- URLs -->
                <input t-if="tigomoney_return" type='hidden' name='return'
                    t-att-value="tigomoney_return"/>
                <input t-if="acquirer.tgm_hkey_encript " type='hidden' name='notify_url'
                    t-att-value="notify_url"/>
                <input t-if="cancel_return" type="hidden" name="cancel_return"
                    t-att-value="cancel_return"/>
                <input t-if="tigomoney_form_url" type="hidden" name="tigomoney_form_url"
                    t-att-value="tigomoney_form_url"/>
                <!-- submit -->
                <button type="submit" width="100px"
                    t-att-class="submit_class">
                    <img t-if="not submit_txt" src="/payment_tigomoney/static/src/img/tigo-money.jpg"/>
                    <span t-if="submit_txt"><t t-esc="submit_txt"/> <span class="fa fa-long-arrow-right"/></span>
                </button>
            </form>
        </template>

    </data>
</odoo>
