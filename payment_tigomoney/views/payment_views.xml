<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="acquirer_form_tigomoney" model="ir.ui.view">
            <field name="name">acquirer.form.tigomoney</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='after'>
                    <group attrs="{'invisible': [('provider', '!=', 'tigomoney')]}">
                        <field name="tgm_hkey"/>
			            <field name="tgm_hkey_encript"/>
			            <field name="tgm_url_produccion"/>
                        <a colspan="2" href="https://" target="_blank">How to configure your tigomoney account?</a>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="transaction_form_tigomoney" model="ir.ui.view">
            <field name="name">acquirer.transaction.form.tigomoney</field>
            <field name="model">payment.transaction</field>
            <field name="inherit_id" ref="payment.transaction_form"/>
            <field name="arch" type="xml">
                <xpath expr='/form//sheet/group[2]' position='after'>
                        <group>
	                        <group>
	                            <field name="tigomoney_txn_type"/>
	                        </group>
                        </group>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
